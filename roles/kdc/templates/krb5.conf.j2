[logging]
default = FILE:/var/log/krb5libs.log
kdc = FILE:/var/log/krb5kdc.log
admin_server = FILE:/var/log/kadmind.log

[libdefaults]
default_realm =  {{ KDC_REALM|upper() }}
dns_lookup_realm = false
dns_lookup_kdc = false
ticket_lifetime = 24h
renew_lifetime = 7d
forwardable = true

[realms]
{{ KDC_REALM|upper() }} = {

 kdc = {{ KDC_SERVER }}
 admin_server = {{ KDC_SERVER }} 
}

[domain_realm]
robinsystems.com = {{ KDC_REALM|upper() }}
.robinsystems.com = {{ KDC_REALM|upper() }}
